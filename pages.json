      },
      {
        "pagePath": "pages/my/my",
        "text": "我的",
        "iconPath": "static/tabbar/my.png",
        "selectedIconPath": "static/tabbar/my_active.png"
      }
    ]
  },
  "subPackages": [
    {
      "root": "subpkg",
      "pages": [
        
      {
                    "path" : "goods_detail/goods_detail",
